<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
       <groupId>org.apache.servicemix</groupId>
       <artifactId>features</artifactId>
       <version>4.4.0</version>
    </parent>

    <groupId>org.jibx.schema.org.opentravel.ws</groupId>
    <version>1.0.3-SNAPSHOT</version>    

    <artifactId>org.jibx.schema.org.opentravel._2011B.ping.rest</artifactId>
    
    <packaging>bundle</packaging>
    <name>opentravel-ping-rest</name>
    <description>JiBX opentravel ping RESTful web service</description>
    
    <properties>
        <cxf-version>2.4.1</cxf-version>
        <schema-version>1.0.2</schema-version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            ${project.artifactId}.*;version=${project.version},
                        </Export-Package>
                        <Import-Package>
	                        *;resolution:=optional,
                        </Import-Package>
                        <Require-Bundle>org.apache.cxf.bundle</Require-Bundle>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
	<dependency>
		<groupId>org.jibx.schema.org.opentravel._2011B</groupId>
		<artifactId>org.jibx.schema.org.opentravel._2011B.ping</artifactId>
		<version>${schema-version}</version>
	</dependency>

    <dependency>
	    <groupId>org.apache.cxf</groupId>
	    <artifactId>cxf-rt-frontend-jaxrs</artifactId>
	    <version>${cxf-version}</version>
	</dependency>
    <dependency>
	    <groupId>org.apache.cxf</groupId>
	    <artifactId>cxf-rt-frontend-jaxws</artifactId>
	    <version>${cxf-version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-databinding-jibx</artifactId>
            <version>${cxf-version}</version>
        </dependency>
    </dependencies>

</project>
