<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
      <groupId>org.jibx.schema.config</groupId>
      <artifactId>schema-utilities-reactor</artifactId>
      <version>1.0.3</version>
    </parent>

    <groupId>org.jibx.config.osgi.wrapped</groupId>
    <artifactId>org.jibx.config.osgi.wrapped.org.apache.cxf.jibx</artifactId>
    <version>2.4.1</version>
    
    <packaging>bundle</packaging>
    <name>JiBX cxf databinding with REST patches</name>
    <description>JiBX cxf databinding with REST patches</description>
    <!-- This bug was fixed here https://issues.apache.org/jira/browse/CXF-4245 -->
    
  
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0</url>
      <comments>This bundle contains apache cxf-rt-databinding-jibx code with osgi manifests added</comments>
    </license>
  </licenses>

  <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            ${project.artifactId}.*;version=${project.version},
                        </Export-Package>
                        <Private-Package>
                            org.apache.cxf.jibx.*;version=${project.version},
                        </Private-Package>
                        <Import-Package>
	                        *;resolution:=optional,
                        </Import-Package>
                        <Require-Bundle>org.apache.cxf.bundle</Require-Bundle>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-databinding-jibx</artifactId>
            <version>${cxf-version}</version>
        </dependency>
    </dependencies>

</project>
