<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
  xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
  xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
  xmlns:cxf="http://cxf.apache.org/blueprint/core"
  xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
  http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd
  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
  ">
  <!-- cxf:bus> *uncomment this to see cxf debugging messages*
    <cxf:features>
      <cxf:logging/>
    </cxf:features>
  </cxf:bus -->
  
  <!-- OSGI property for http path -->
  <property-placeholder persistent-id="org.jibx.schema.org.opentravel._2011B.touractivity.ws.rest"
    xmlns="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">
    <default-properties>
      <property name="httpAddress" value="/rest" />
    </default-properties>
  </property-placeholder>

  <!-- JAX-RS Server definition -->
   <jaxrs:server id="tourActivityService" address="${httpAddress}" >
      <jaxrs:serviceBeans>
        <ref component-id="tourActivitySvc"/>
      </jaxrs:serviceBeans>
      <jaxrs:dataBinding>
          <bean class="org.jibx.config.databinding.MyJibxDataBinding" />
      </jaxrs:dataBinding>
   </jaxrs:server>

   <!-- tourActivity RESTful service -->
   <bean id="tourActivitySvc" class="org.jibx.schema.org.opentravel._2011B.touractivity.ws.rest.TourActivityRestService">
        <property name="tourActivityService" ref="tourActivityServiceRef" />
   </bean>

   <!-- OSGI Service listener -->
	<reference id="tourActivityServiceRef"
	    interface="org.jibx.schema.org.opentravel._2011B.touractivity.ws.TourActivityService"
	    availability="optional" />

</blueprint>