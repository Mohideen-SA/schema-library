<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
      <groupId>org.jibx.schema.org.opentravel._2011B.ws</groupId>
      <artifactId>opentravel-2011B-ws-reactor</artifactId>
      <version>1.0.3</version>
    </parent>

    <artifactId>org.jibx.schema.org.opentravel._2011B.touractivity.ws.rest</artifactId>
    
    <packaging>bundle</packaging>
    <name>opentravel-touractivity-ws-rest</name>
    <description>JiBX opentravel touractivity RESTful web service</description>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>${project.artifactId}.*;version=${project.version}</Export-Package>
                        <Import-Package>
                            org.osgi.*;resolution:=optional;version="[1.5,2)",	<!-- HACK - cxf-rt-databinding-jibx messes this up -->
                            *;resolution:=optional
                         </Import-Package>
                        <Require-Bundle>org.apache.cxf.bundle</Require-Bundle>
                        <!-- Bundle-Activator>org.jibx.schema.org.opentravel._2011B.touractivity.ws.rest.TourActivityRestService</Bundle-Activator -->
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.jibx.schema.org.opentravel.ws</groupId>
            <artifactId>org.jibx.schema.org.opentravel._2011B.touractivity.ws.service</artifactId>
            <version>1.0.3</version>    
        </dependency>
	<dependency>
		<groupId>org.jibx.schema.org.opentravel._2011B</groupId>
		<artifactId>org.jibx.schema.org.opentravel._2011B.touractivity</artifactId>
		<version>1.0.3</version>
	</dependency>
        
    <dependency>
	    <groupId>org.apache.cxf</groupId>
	    <artifactId>cxf-rt-frontend-jaxrs</artifactId>
	    <version>${cxf-version}</version>
	</dependency>
	  <dependency>
	    <groupId>org.jibx.config.osgi.wrapped</groupId>
	    <artifactId>org.jibx.config.osgi.wrapped.org.apache.cxf.jibx</artifactId>
	    <version>2.4.1</version>
	  </dependency>
    </dependencies>

</project>
